@model TulaTreeMvc.Areas.AdminPanel.Models.CountryViewModel

@{
    ViewBag.Title = "Country";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit Country</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-xs-12">
        <h4>Edit</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group col-xs-6">
                @Html.ChqLabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter country code" } })
                    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-xs-6">
                @Html.ChqLabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control ", placeholder = "Enter country name" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-xs-6">
                @Html.ChqLabelFor(model => model.ISDCode, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.ISDCode, new { htmlAttributes = new { @class = "form-control ", placeholder = "Enter country ISD code" } })
                    @Html.ValidationMessageFor(model => model.ISDCode, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-xs-6">
                @Html.LabelFor(model => model.IsRemoved, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.CheckBoxFor(model => model.IsRemoved, new { htmlAttributes = new { @class = "form-control btn btn-default" } })
                    @Html.ValidationMessageFor(model => model.IsRemoved, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-xs-6">
                <div class="col-md-offset-3 col-md-8">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
                    <input type="submit" value="Edit" class="btn btn-success pull-right" />
                </div>
            </div>
        </div>
    </div>
}


